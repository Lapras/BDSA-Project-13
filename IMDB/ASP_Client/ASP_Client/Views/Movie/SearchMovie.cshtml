@model ASP_Client.Models.MovieOverviewViewModel

@{ 
    ViewBag.Title = "SearchMovie"; 
} 
 
<h2>Search Results</h2> 
 
  
 @if (Model.ErrorMsg.IsEmpty())
{   
      
    <table>
        <tr><th>Title:</th><th>Year:</th></tr>
        @foreach (var movie in Model.FoundMovies)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Title, "SearchMovieDetails", new { movie.Id })
                </td>
                <td>
                    @movie.Year
                </td>
            </tr>
        }
    </table>
     }
else
{
  @Model.ErrorMsg
}

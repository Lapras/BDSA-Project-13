<UserControl x:Class="WPF_Client.View.SearchView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        
        
        <TextBlock Grid.Row="0" Grid.Column="1" FontFamily="Resources/#Charlemagne Std" FontSize="35" Text="IMDB" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>

        <TextBox Grid.Row="1" Grid.Column="1" Height="25" Width="200" Text="{Binding TextBox, UpdateSourceTrigger=PropertyChanged}"/>

        <Button Grid.Row="1" Grid.Column="3" Width="75" Height="25" Command="{Binding SearchCommand}" Content="Search"/>

        <ComboBox Name="ComboBox" Grid.Row="1" Grid.Column="0" Width="75" Height="25" SelectedIndex="{Binding ComboBoxSelectedIndex}">
            <ComboBoxItem Content="Movies" IsSelected="True" />
            <ComboBoxItem Content="Actors" />
        </ComboBox>


    </Grid>
</UserControl>
